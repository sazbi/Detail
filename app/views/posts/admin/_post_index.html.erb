<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <%= previous_week_link(sort_start, sort_end, store_params) %>
    </div>
    <div class="col-md-8">
      <h1><%= @store.name %></h1>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <%= status_tab("submitted", @submitted.count, "primary") %>
        </li>
        <li class="nav-item">
          <%= status_tab("approved", @approved.count, "info") %>
        </li>
        <li class="nav-item">
          <%= status_tab("rejected", @rejected.count, "danger") %>
        </li>
        <li class="nav-item">
          <%= status_tab("paid", @paid.count, "success") %>
        </li>
      </ul>
      <%= render partial: 'posts/admin/posts', locals: { lists: @posts } %>
    </div>
    <div class="col-md-2">
      <%= next_week_link(sort_start, sort_end, store_params) %>
    </div>
  </div>
</div>