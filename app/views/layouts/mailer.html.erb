<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
    table, th, td {
			border: solid 1px;
		}
		table {
			border-collapse: collapse;
			width: 75%;
			margin: auto;
			padding: 0;
		}
		tr:nth-child(even) {
			background-color: #f2f2f2;
		}
		td {
			padding: 5px;
		}
		th {
			text-align: left;
			background-color: #4CAF50;
			border: none;
			color: white;
			padding: 5px;
		}
    </style>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
